<form class="form-horizontal">
    <div class="row-fluid">
        <div class="span3"><h4>Action</h4></div>
        <div class="span2"><h4>Type</h4></div>
        <div class="span5"><h4>Command</h4></div>
        <div class="span1"><h4>Enable</h4></div>
    </div>
    <div data-bind="foreach: button_definitions">
        <div class="row-fluid" style="margin-bottom: 5px">
            <div class="span3 input-prepend control-group" title="The action command which the printer will send">
				        <span class="add-on">GPIO:</span>
                <input type="text" class="span8 input-mini text-left" data-bind="value: GPIO">
            </div>
            <div class="span2 control-group" title="Gcode commands are sent to the printer, system commands are executed by the OctoPrint host">
                <select class="span12" id=type data-bind="value: type">
                    <option value="jog">Move Axis</option>
                    <option value="Home">Home Axis</option>
                    <option value="gcode">G-Code</option>
                    <option value="psu">PSU Control</option>
                    <option value="action">Action</option>
                </select>
            </div>
            <!-- ko if: type == "jog" -->
            <div class="span5 control-group" title="The gcode to send or command to execute. Separate multiple gcode commands with semi-colons.">
                <input type="text" class="input-block-level" data-bind="value: axis">
            </div>
            <!-- /ko -->
            <div class="span1 control-group" title="Enable or disable this action command">
                <input type="checkbox" data-bind="checked: enabled">
            </div>
            <div class="span1">
                <a title="Remove Button Definition" class="btn btn-danger" data-bind="click: $parent.removeButtonDefinition"><i class="icon-trash"></i></a>
            </div>
        </div>
    </div>

    <div class="row-fluid">
        <div class="offset11 span1">
            <a title="Add Button Definition" class="btn btn-primary" data-bind="click: addButtonDefinition()"><i class="icon-plus"></i></a>
        </div>
    </div>
</form>